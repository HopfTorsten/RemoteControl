<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteControlApp.AddConnectionDialog">
  <StackLayout VerticalOptions="Center">
  <Label Text="Verbindung hinzufügen" Font="Large" VerticalOptions="Center" HorizontalOptions="Center" />
    <Entry Placeholder="Name" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="250">
      
    </Entry>
    <Entry Placeholder="IP-Adresse" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="250">
      
    </Entry>
    <Button Text="Speichern und verbinden" HorizontalOptions="Center" VerticalOptions="Center" Clicked="OnSaveConnectionClicked">
      
    </Button>
  </StackLayout>
</ContentPage>